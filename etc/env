# strategy settings

enabled=true  # вкл/выкл бота
symbol=AAVEBTC  # какой тикер торгуем
step=0.1  # шаг в процентах для условия на открытие новой позиции. 0.5 = 0.5%
ticker_amount_digits=0.001  # До скольки знаков после запятой округлять количество монет в заявке на покупку. Значение можно узнать тут https://www.binance.com/en/trade-rule
ticker_price_digits=0.000001  # До скольки знаков после запятой округлять цену в заявке. Этот параметр также используется для округления цены при проверке на наличие открытой позиции в этом ценовом диапазоне.
continue_buy_amount=0.0002  # Количество денег, на которое открываем новые позиции. Для SOLUSDT измеряется в USDT, для SOLBTC - в BTC.

global_stop_loss=0.0  # цена, при которой продаём всё и заканчиваем работу

strategy_type=floating  # тип стратегии, floating для плавающей ставки, basic - стратегия с постоянным процентом
avg_rate_sell_limit=0.4  # шаг в процентах для условия сделок. 5% = 0.5
use_last_open_position_rate=true  # условие покупки: false от предыдущего тика, true от предыдущей покупки
close_positions_only=false # запрет на открытие новых позиций

init_buy_amount=1  # сколько позиций открываем в самом начале теста
multiple_sell_on_tick=false # Разрешаем множественные продажи на одном тике или нет.

# trader settings
throttling_time=2  # Минимальная частота тика в секундах
exchange=binance  # Выбор биржи для торгов, bybit или binance
fee_percent=0.075  # Процент комиссий от суммы сделки
dry_run=false  # true - торговля без отправки сделок на бирже
